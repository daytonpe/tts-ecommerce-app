

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@product.price) %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @product.rating %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category.name %>
</p>

<div class="thumbnail">
  <%= image_tag @product.image.url, width: '300px'%>
</div>

<p>
   <%= form_tag(add_to_cart_path(product_id: @product.id)) do %>
     <%= number_field_tag :quantity, nil, placeholder: "How many?" %> 
      <p></p>
     <%= submit_tag "Add to cart", class: "btn btn-danger" %>
   <% end %>
</p>

<div>
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div>
